<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_board"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03000000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/design_default_color_on_primary"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"

                android:scaleType="fitCenter"
                android:src="@drawable/robot_2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"

                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtSetReceNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:text="1588-8900"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txtSetReceName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:text="삼성카드"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/exchange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/design_default_color_on_primary"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/robot" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@null"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtSetTransNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:text="010-1111-2222"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txtSetTransName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:text="훈츠"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@null"
        >

        <Button
            android:id="@+id/bt_insert"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="1dp"
            android:text="추가"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_change"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:elevation="1dp"
            android:text="초기화"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="1dp"
            android:text="삭제"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />




    </LinearLayout>

</LinearLayout>
