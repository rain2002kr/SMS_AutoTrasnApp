<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/background_light"
    app:cardCornerRadius="5dp"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".SmS_Send.SendSmSFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/sms"
                app:srcCompat="@drawable/sms" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@null"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtSetReceNumber"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:hint="010-4697-3907"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtSetReceName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:hint="이경훈"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@null"
                >

                <Button
                    android:id="@+id/btTemp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:elevation="1dp"
                    android:text="임시"
                    android:textColor="@color/design_default_color_on_secondary" />

            <Button
                android:id="@+id/btShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/background_light"
                android:textColor="@color/design_default_color_on_secondary"
                android:elevation="1dp"
                android:text="공유" />

            <Button
                android:id="@+id/btLoad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/background_light"
                android:textColor="@color/design_default_color_on_secondary"
                android:elevation="1dp"
                android:text="로드" />

            <Button
                android:id="@+id/btSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/background_light"
                android:textColor="@color/design_default_color_on_secondary"
                android:elevation="1dp"
                android:text="전송" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="보낼문자메시지"
            android:textSize="14sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>